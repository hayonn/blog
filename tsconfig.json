{
  "compilerOptions": {
   "baseUrl": "./",
   "paths": {
      "@/*": ["src/*"]
   },
   "target": "es6",
   "module": "esnext",
   "moduleResolution": "node",
   "noResolve": false,
   "noImplicitAny": false,
   "removeComments": false,
   "sourceMap": true,
   "allowJs": true,
   "jsx": "react",
   "allowSyntheticDefaultImports": true,
   "keyofStringsOnly": true
 },
 "typeRoots": ["node_modules/@types", "src/@type"],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["./src/**/*", "@type"]
}
